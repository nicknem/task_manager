<div class="text-center">
  <h2>ID: <%= @task.id %></h2>
  <h2>Name: <%= @task.name %></h2>
  <h2>Done:
      <% if @task.done %>
        <i class="fa fa-check"></i>
      <% else %>
        <i class="fa fa-times"></i>
      <% end %>
      </h2>

  <p><%= link_to "Delete", task_path(@task),
        method: :delete,
        data: { confirm: "Are you sure?" } %></p>

  <p><%= link_to "Back to Menu", tasks_path%>
  </p>
</div>

